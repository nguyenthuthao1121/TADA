<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/base-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-base.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/grid-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-login-signup.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/user-index.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/user-bookdetail.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/user-information.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/shopping-cart-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/confirm-package-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/order-list-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/evaluate-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal-user.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar py-1">
            <div class="container-fluid d-flex justify-content-center">
                <div class="navbar-brand px-3">
                    <a asp-page="/Index"><img src="https://blog.usetada.com/hubfs/TADA-LOGO-01.png" style="width:120px"></a>
                </div>
                <form method="get" id="search-form" class="w-50" asp-page="Index">
                    <div class="input-group input-group-sm d-flex w-100 justify-content-center">
                        <span class="input-group-text border-0 bg-white" style="border-radius: 8px 0 0 8px"><i class="fas fa-search"></i></span>
                        @if (Model.GetType().GetProperty("SearchQuery") != null)
                        {
                            <input type="text" class="form-control border-0" id="search-input" name="q" value="@Model.SearchQuery" placeholder="Tìm kiếm sản phẩm mong muốn">
                        }
                        else
                        {
                            <input type="text" class="form-control border-0" id="search-input" name="q" placeholder="Tìm kiếm sản phẩm mong muốn">
                        }
                        <div class="border-0 border-start bg-white input-group-text justify-content-center px-0" style="border-radius: 0 8px 8px 0">
                            <button class="btn bg-white text-primary border-0 border-start border-primary border-2 search-button"
                                    type="submit" style="border-radius: 0 8px 8px 0; border-left: 1px solid; text-transform: none; font-weight: 400;">
                                Tìm kiếm
                            </button>
                        </div>
                    </div>
                </form>
                <ul class="navbar-nav d-flex flex-row">
                    <li class="nav-item">
                        @if (ViewBag.Name == null)
                        {
                            <a class="mx-4" asp-area="Cart" asp-page="GuestShoppingCart" style="font-weight: 400; color: var(--white-color)">
                                <i class="fas fa-shopping-cart me-2 text-white" style="font-weight:900"></i>Giỏ hàng
                            </a>
                        }
                        else
                        {
                            <a class="mx-4" asp-area="Cart" asp-page="ShoppingCartFill" style="font-weight: 400; color: var(--white-color)">
                                <i class="fas fa-shopping-cart me-2 text-white" style="font-weight:900"></i>Giỏ hàng
                            </a>
                        }
                    </li>
                    <li class="nav-item my-account">
                        @if (ViewBag.Name == null)
                        {
                            <a style="font-weight: 400; color: var(--white-color)">
                                <i class="fas fa-user me-2 text-white" style="font-weight:900"></i>Tài khoản
                            </a>
                            <ul class="sub-navbar sub-navbar-guest">
                                <li><a asp-area="Authentication" asp-page="Login"><i class="fas fa-sign-in"></i>Đăng nhập</a></li>
                                <li><a asp-area="Authentication" asp-page="Signup"><i class="fas fa-pen-to-square"></i>Đăng ký</a></li>
                            </ul>
                        }
                        else
                        {
                            <a style="font-weight: 400; color: var(--white-color)">
                                <i class="fas fa-user me-2 text-white" style="font-weight:900"></i>@ViewBag.Name
                            </a>
                            <ul class="sub-navbar sub-navbar-member">

                                <li><a asp-area="PersonalManagement" asp-page="UserInformation"><i class="fas fa-address-card"></i>Tài khoản của tôi</a></li>
                                <li><a asp-area="Order" asp-page="OrderListFillAll"><i class="fas fa-receipt" style="width:18px; text-align: center;"></i>Đơn hàng của tôi</a></li>
                                <li><a asp-area="Authentication" asp-page="Login" asp-page-handler="Logout"><i class="fas fa-sign-out" style="width:18px; text-align: center;"></i>Đăng xuất</a></li>
                                
                            </ul>                            
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 m-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>