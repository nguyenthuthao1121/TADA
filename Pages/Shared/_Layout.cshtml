<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0" />
    <title>@ViewData["Title"] - TADA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/grid-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shopping-card-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/confirm-package-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/order-list-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/evaluate-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal-user.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TADA.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
         <nav class="navbar bg-primary py-0">
            <div class="container-fluid d-flex justify-content-center mx-0">
              <div class="navbar-brand px-3">
                <a href="#"><img src="https://blog.usetada.com/hubfs/TADA-LOGO-01.png" style="width:150px"></a>
              </div>
              <div class="input-group d-flex w-50 justify-content-center">
                <span class="input-group-text border-0 bg-white"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control border-0" placeholder="Tìm kiếm sản phẩm mong muốn">
                <div class="border-0 border-start bg-white input-group-text justify-content-center px-0">
                  <button class="btn bg-white text-primary border-0 border-start rounded-0 border-primary border-2" type="button">Tìm kiếm</button>
                </div>
              </div>
              <ul class="navbar-nav d-flex flex-row">
                <li class="nav-item">
                  <a class="nav-link text-white mx-4" asp-area="" asp-page="/User/ShoppingCardFill" style="font-size:20px; font-weight: 300" ><i
                      class="fas fa-shopping-cart me-2 --white-color" style="font-weight:900"></i>Giỏ hàng</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-white" asp-area="" asp-page="/User/OrderListEmptyAll" style="font-size:20px; font-weight: 300"><i
                      class="fas fa-user me-2 --white-color" style="font-weight:900"></i>Username</a>
                </li>
              </ul>
            </div>
          </nav>

    </header>
    <div class="container-fluid px-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>