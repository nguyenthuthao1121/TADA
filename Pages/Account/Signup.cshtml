@page
@model SignupModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="user-login container-fluid bg-white h-100" style="overflow-y: hidden; overflow-x: hidden">
    <div class="row">
        <div class="col-md-6 px-0">
            <img src="~/img/log-in-2.jpg" alt="Login image" class="d-none d-md-block w-100 vh-100" style="object-fit: cover">
        </div>
        <div class="col-md-6 my-auto mx-auto">
            <div class="d-flex justify-content-center fw-bold gx-md-5 login-signup">
                <div class="login" style="padding-right: 1.5rem">
                    <a asp-page="/Account/Login" class="text-dark">Đăng nhập</a>
                </div>
                <div class="signup" style="padding-left: 1.5rem">
                    <a>Đăng ký</a>
                </div>
            </div>
            <form method="post">
                <div class="form-group row justify-content-center">
                    <div class="col-sm-10 col-md-10 col-lg-9 mb-3 mt-4">
                        <label for="email" class="form-label">Tên đăng nhập</label>
                        <input type="email" class="form-control" id="email" asp-for="@Model.Email" placeholder="Nhập email của bạn" required>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-10 col-md-10 col-lg-9 mb-4">
                        <label for="pwd" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="pwd" asp-for="@Model.Password" placeholder="Nhập mật khẩu của bạn" required>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-10 col-md-10 col-lg-9 mb-5">
                        <label for="re_pwd" class="form-label">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control" id="re_pwd" asp-for="@Model.ConfirmPassword" placeholder="Nhập lại mật khẩu của bạn" required>
                    </div>
                </div>
                <div class="row justify-content-center form-group">
                    <div class="col-sm-10 col-md-10 col-lg-9">
                        <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">Đăng ký</button>
                    </div>
                </div>
            </form>
            <div class="row justify-content-center form-group">
                <div class="col-sm-10 col-md-10 col-lg-9 mt-3">
                    <p class="text-center">
                        Bằng việc đăng ký, bạn đã đồng ý với chúng tôi về
                        <br>
                        <a style="color: var(--primary-color)">Điều khoản dịch vụ</a>
                        &
                        <a style="color: var(--primary-color)">Chính sách bảo mật</a>
                        <br>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
