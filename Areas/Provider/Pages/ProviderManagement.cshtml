@page
@model ProviderManagementModel
@{
    ViewData["Title"] = "Quản lý nhà cung cấp";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewBag.Name = HttpContext.Session.GetString("Name");
}

<div class="row">
    <div class="col-10 m-0 p-0 content">
        <div class="feature">
            <div class="feature-item filter-search">
                <div class="filter-search-feature">
                    <div class="search-feature">
                        <input type="text" class="search-feature-input" style="width: 300px" placeholder="Tìm kiếm nhà cung cấp">
                        <button class="feature-btn">
                            <i class="search-feature-btn-icon fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="user-list-container">
            <div class="user-table">
                <table class="table">
                    <tr class="table-row list-row" style="width: 100%; color: var(--primary-color)">
                        <th style="width: 10%">STT</th>
                        <th style="width: 25%">Tên nhà cung cấp</th>
                        <th style="width: 65%">Địa chỉ</th>
                    </tr>
                    @{
                        int cnt = 0;
                        foreach (var provider in Model.Providers)
                        {
                            <tr class="table-container" style="color: var(--text-color)">
                                <th class="table-value list-value">@(++cnt)</th>
                                <td class="table-value list-value">@provider.Name</td>
                                <td class="table-value list-value">@provider.Address</td>
                            </tr>
                        }
                    }
                </table>
            </div>
            <div class="pagination-container add-button">
                <div class="add-button">
                    <a asp-area="" asp-page="/Admin/AddCategory">
                        <button class="feature-btn add-btn">
                            THÊM NHÀ CUNG CẤP
                        </button>
                    </a>
                </div>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Trang trước</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>

</div>
