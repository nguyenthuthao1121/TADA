@page
@model StaffModel
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewBag.Name = HttpContext.Session.GetString("Name");
    ViewBag.AccountId = HttpContext.Session.GetInt32("Id");
}

<div class="row">
    <div class="col-10 m-0 p-0 content">
        <div class="feature">
            <div class="feature-item filter-search">
                <span class="filter-search-heading">Lọc theo :</span>
                <div class="filter-search-feature">
                    <div class="filter-feature">
                        <form method="get">
                            <input type="hidden" name="q" value="@Model.SearchQuery" />
                            <select class="select-filter filter-feature-item" asp-for="Filter">
                            <option value="all">Trạng thái: Tất cả</option>
                            <option value="true">Active</option>
                            <option value="false">Blocked</option>
                        </select>
                            <input type="hidden" name="SortBy" value="@Model.SortBy" />
                            <input type="hidden" name="SortType" value="@Model.SortType" />
                        <button class="feature-btn filter-feature-item" type="submit">
                            Lọc
                        </button>
                        </form>
                    </div>
                    <div class="search-feature">
                        <form method="get">
                            <input class="search-feature-input" placeholder="Tìm kiếm admin" asp-for="SearchQuery">
                            <input type="hidden" name="Filter" value="@Model.Filter" />
                            <input type="hidden" name="SortBy" value="@Model.SortBy" />
                            <input type="hidden" name="SortType" value="@Model.SortType" />
                            <button class="feature-btn" type="submit">
                                <i class="search-feature-btn-icon fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="feature-item sort">
                <span class="sort-heading">Sắp xếp theo :</span>
                <div class="sort-feature">
                    <div class="sort-feature-item">
                        <form method="get">
                            <input type="hidden" name="SearchQuery" value="@Model.SearchQuery" />
                            <input type="hidden" name="Filter" value="@Model.Filter" />
                            <select class="sort-by" asp-for="SortBy">
                                <option value="">Thuộc tính:</option>
                                <option value="name">Tên</option>
                                <option value="status">Trạng thái</option>
                            </select>
                            <select class="sort-type" asp-for="SortType">
                                <option value="asc">Tăng dần</option>
                                <option value="desc">Giảm dần</option>
                            </select>
                            <button class="feature-btn" type="submit">
                                Sắp xếp
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <div class="user-list-container">
            <div class="user-table">
                <table class="table">
                    <tr class="table-row list-row" style="width: 100%; color: var(--primary-color)">
                        <th style="width: 3%">STT</th>
                        <th style="width: 10%">Họ và tên</th>
                        <th style="width: 7%">Vai trò</th>
                        <th style="width: 7%">Giới tính</th>
                        <th style="width: 8%">Ngày sinh</th>
                        <th style="width: 15%">Email</th>
                        <th style="width: 10%">Số điện thoại</th>
                        <th style="width: 25%">Địa chỉ</th>
                        <th style="width: 7%">Trạng thái</th>
                        <th style="width: 8%">Action</th>
                    </tr>
                    @{
                        int cnt = 0;
                        foreach(var staff in Model.Staffs)
                        {
                            <tr class="table-container" style="color: var(--text-color)">
                                <th class="table-value list-value">@(++cnt)</th>
                                <td class="table-value list-value" style="font-weight: 600">@staff.Name</td>
                                <td class="table-value list-value">@staff.RoleName</td>
                                <td class="table-value list-value">
                                    @if (staff.Gender)
                                    {
                                        <span>Nam</span>
                                    }
                                    else
                                    {
                                        <span>Nữ</span>
                                    }
                                </td>
                                <td class="table-value list-value">
                                    @{
                                        var d = staff.Birthday.Day;
                                        var m = staff.Birthday.Month;
                                        var y = staff.Birthday.Year;
                                        string date = "" + d + "/" + m + "/" + y;
                                        <span>@date</span>
                                    }
                                </td>
                                <td class="table-value list-value">@staff.Email</td>
                                <td class="table-value list-value">@staff.TelephoneNumber</td>
                                <td class="table-value list-value">@staff.Address</td>
                                <td class="table-value list-value">
                                    @if (staff.Status)
                                    {
                                        <span>Active</span>
                                    }
                                    else
                                    {
                                        <span>Blocked</span>
                                    }
                                </td>
                                <td class="table-value list-value">
                                    <ul class="btn-container">
                                        @*<li class="btn-item">
                                            <a href="" + customer.CustomerId)" class="action-admin-btn">
                                                <i class="block-icon fa-solid fa-ban"></i>
                                            </a>
                                        </li>
                                        <li class="btn-item">
                                            <a href="" + customer.CustomerId)" class="action-admin-btn">
                                                <i class="delete-icon fa-sharp fa-solid fa-trash"></i>
                                            </a>
                                        </li>*@
                                        @{
                                            if (staff.AccountId == ViewBag.AccountId)
                                            {
                                                <li class="btn-item">
                                                    <a href="/" class="action-admin-btn isDisabled">
                                                        <i class="block-icon fa-solid fa-ban"></i>
                                                    </a>
                                                </li>
                                            }
                                            else if (staff.Status)
                                            {
                                                <li class="btn-item">
                                                    <a href="@Url.Content("~/Staff/StaffManagement/?userId=" + staff.AccountId)" class="action-admin-btn">
                                                        <i class="block-icon fa-solid fa-ban"></i>
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="btn-item">
                                                    <a href="@Url.Content("~/Staff/StaffManagement/?userId=" + staff.AccountId)" class="action-admin-btn">
                                                        <i class="fa-solid fa-unlock"></i>
                                                    </a>
                                                </li>
                                            } 
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                    }                  
                </table>
            </div>
            <div class="pagination-container add-button">
                <div class="add-button">
                    <a style="display: block; text-align: center" class="feature-btn add-btn" asp-area="Staff" asp-page="AddStaff">
                        THÊM NHÂN VIÊN
                    </a>
                </div>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Trang trước</a> 
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    
</div>
