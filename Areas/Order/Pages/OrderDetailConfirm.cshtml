@page
@model OrderDetailConfirmModel
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div id="order-detail--confirm">
    <div class="grid">
        <div class="row">
            <div class="col c-7 c-o-1">
                <div class=" wrap-user grid">
                    <div class="recipient-infor" style="border-radius: 8px;">
                        <div class="recipient-infor__title row">
                            <div class="order__title col c-6">Thông tin người nhận</div>
                        </div>
                        <div class="recipient-infor__desc">
                            <p>Nguyễn Quốc Toàn, 0935382788</p>
                            <p>74 Bàu Năng 1, Phường Hòa Minh, Quận Liên Chiểu, Thành phố Đà Nẵng</p>
                        </div>
                    </div>
                    <div class="confirm__order-detail" style="border-radius: 8px;">
                        <div class="order__title">Sản phẩm</div>
                        <div class="confirm__book-list grid">
                            <div class="cart__flex-item row">
                                <a asp-area="" asp-page="/User/ConfirmPackage" class="order-book__img col c-2"><img src="~/img/book1.jpg" alt="Ảnh sách" width=95%></a>
                                <div class="cart__book-desc col c-6">
                                    <a asp-area="" asp-page="/User/ConfirmPackage" class="cart__book-name">
                                        Toán Nâng Cao Và Bồi Dưỡng Học Sinh Giỏi Lớp 2
                                    </a>
                                    <p class="cart__book-provider">
                                        Nhà cung cấp: 
                                        <span>Kim Đồng</span>
                                    </p>
                                </div>
                                <div class="cart__book-price col c-2">
                                    27.000 đ
                                </div>
                                <div class="cart__book-number col c-2">
                                    Số lượng: 1
                                </div>
                            </div>
                            <div class="cart__flex-item row">
                                <a asp-area="" asp-page="/User/ConfirmPackage" class="order-book__img col c-2"><img src="~/img/book2.jpg" alt="Ảnh sách" width=95%></a>
                                <div class="cart__book-desc col c-6">
                                    <a asp-area="" asp-page="/User/ConfirmPackage" class="cart__book-name">
                                        Tây Sơn Phụng Ký
                                    </a>
                                    <p class="cart__book-provider">
                                        Nhà cung cấp: 
                                        <span>Phụ nữ</span>

                                    </p>
                                </div>
                                <div class="cart__book-price col c-2">
                                    121.500 đ
                                </div>
                                <div class="cart__book-number col c-2">
                                    Số lượng: 1
                                </div>
                            </div>
                            

                        </div>

                    </div>

                </div>
            </div>
            <div class="col c-3">
                <div class="nav__order-detail" style="width: 100%; height:auto; border-radius: 8px;">
                    <div class="order__title">
                        Chi tiết đơn hàng
                    </div>
                    <div class="order-detail__desc grid">
                        <div class="row">
                            <div class="col c-7" style="padding: 0;">Tổng giá (2 sách)</div>
                            <div class="col c-5" style="padding: 0; text-align:right;">148.500 đ</div>
                        </div>
                        <div class="row">
                            <div class="col c-7" style="padding: 0;">Phí giao hàng</div>
                            <div class="col c-5" style="padding: 0; text-align:right;">13.000đ</div>
                        </div>
                        <div class="row">
                            <div class="col c-7" style="padding: 0;">Tổng tiền</div>
                            <div class="col c-5" style="padding: 0; text-align:right; color:var(--primary-color);">161.500 đ</div>
                        </div>
                        <div class="row">
                            <div class="col c-7" style="padding: 0;">Trạng thái giao hàng</div>
                            <div class="col c-5" style="padding: 0; text-align:right; color:var(--primary-color);">Chờ xác nhận</div>
                        </div>
                    </div>
                    <div class="btn--confirm">
                        <button class="btn--blue cancelBtn" style="width:100%;">
                            <a href="#">
                                HỦY ĐƠN HÀNG
                            </a>
                        </button>
                    </div>
                </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal-cancel-order js-modal-cancel-order">
        <div class="modal-container js-modal-container" style="width:500px;">
            <div class="modal-header order__title">
                Xác nhận hủy đơn hàng
            </div>
            <div class="modal-body row">
                <div class="col c-6 btn--confirm">
                    <button class="btn--grey js-modal-close" style="width:100%;"><a asp-area="" asp-page="/User/EvaluateUser">HỦY ĐƠN HÀNG</a></button>
                </div>
                <div class="col c-6 btn--confirm">
                    <button class="btn--blue js-modal-close" style="width:100%;"><a href="#">QUAY LẠI</a></button>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript -->
    <script>
        const cancelOrderBtn=document.querySelector('#order-detail--confirm .cancelBtn');
        const modal=document.querySelector('#order-detail--confirm .js-modal-cancel-order');
        const modalClose_list=document.querySelectorAll('#order-detail--confirm .js-modal-close');


        function showModal(){
            modal.classList.add('open')
        }
        function hideModal(){
            modal.classList.remove('open')
        }

        cancelOrderBtn.addEventListener('click',showModal)

        for(const modalClose of modalClose_list){
            modalClose.addEventListener('click',hideModal)
        }
        
    </script>

</div>