@page
@model ForgotPwdModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container ps-5">
    <h4 class="mt-3 text-uppercase" style="font-weight:700; color: var(--primary-color)">Quên mật khẩu</h4>
    <div class="row bg-white py-4 mt-3 px-4 rounded">
        <div class="col-sm-10 col-md-12">
            <p>Vui lòng nhập tài khoản mà bạn muốn lấy lại mật khẩu</p>
            <form method="post">
                <div class="form-group row">
                    <div class="col-sm-10 col-md-5 col-lg-4">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input class="form-control rounded-0" asp-for="Email" placeholder="Nhập email" required>
                        <span class="text-danger">@Model.Message</span>
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-sm-5 col-md-3 col-lg-2">
                        <button type="submit" class="btn btn-primary btn-md fw-bold" style="width: 100%">Tiếp tục</button>
                    </div>
                </div>
            </form>
            <div class="form-group mt-3" style="width: fit-content">
                <a asp-area="Authentication" asp-page="Login" style="color: var(--primary-color)">Quay trở lại</a>
            </div>
        </div>
    </div>
</div>