@page
@model ForgotPwd2Model
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container ps-5">
    <h4 class="mt-3 text-uppercase" style="font-weight:700; color: var(--primary-color)">Quên mật khẩu</h4>
    <div class="row bg-white py-4 mt-3 px-4 rounded">
        <div class="col-sm-10 col-md-12">
            <p>Vui lòng nhập mật khẩu mới và mã xác minh mà đã được chúng tôi gửi qua email <a href="#" style="color: var(--primary-color)">xxx@gmail.com</a></p>
            <div class="form-group row">
                <div class="col-sm-10 col-md-5 col-lg-4">
                    <label for="pwd" class="form-label">Mật khẩu mới</label>
                    <input type="password" class="form-control rounded-0" id="pwd" name="userPass" placeholder="Nhập mật khẩu mới"
                           required>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-10 col-md-5 col-lg-4">
                    <label for="re_pwd" class="form-label">Nhập lại mật khẩu</label>
                    <input type="password" class="form-control rounded-0" id="re_pwd" name="userPass" placeholder="Nhập lại mật khẩu"
                           required>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-10 col-md-5 col-lg-4">
                    <label for="confirm" class="form-label">Mã xác minh</label>
                    <input type="text" class="form-control rounded-0" id="confirm" name="confirm" placeholder="Nhập mã xác minh"
                           required>
                </div>
            </div>
            <div class="row form-group mt-4">
                <div class="col-sm-5 col-md-3 col-lg-2">
                    <button type="submit" class="btn btn-primary btn-md" style="width: 100%">Xác nhận</button>
                </div>
            </div>
            <div class="form-group mt-3" style="width: fit-content">
                <a asp-page="/Guest/ForgotPwd" style="color: var(--primary-color)">Quay trở lại</a>
            </div>
        </div>
    </div>
</div>